<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0fcff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/AupRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/arrow_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ArateCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="19dp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="-5.3sp"
        android:text="3"
        android:textColor="#00a88f"
        android:textSize="13.3sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/AdownRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="39dp"
        android:src="@drawable/arrow_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/verified"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="54dp"
        android:src="@drawable/correct_symbol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answerId"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="6sp"
        android:paddingBottom="11dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:paddingTop="11dp"
        android:text=" "
        android:textColor="#00a88f"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/personImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="#00a88f"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerId" />

    <TextView
        android:id="@+id/personName"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="12dp"
        android:text="Hesham Muhammed"
        android:textColor="#00a88f"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerId" />

    <TextView
        android:id="@+id/personeDate"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="2018/13/6"
        android:textColor="#00a88f"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personName" />

    <TextView
        android:id="@+id/personeRate"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="4.7 / 5.0"
        android:textColor="#00a88f"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personeDate" />

    <View
        android:id="@+id/h2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="58dp"
        android:background="#00a88f"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerId" />

    <ImageView
        android:id="@+id/deleteimage"
        android:layout_width="14dp"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="62dp"
        android:background="@drawable/delete_button"
        app:layout_constraintEnd_toStartOf="@+id/deletetext"
        app:layout_constraintTop_toBottomOf="@+id/answerId" />

    <TextView
        android:id="@+id/deletetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="62dp"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="2.3sp"
        android:text="Delete"
        android:textColor="#00a88f"
        android:textSize="11.7sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerId" />

    <View
        android:id="@+id/v2"
        android:layout_width="18dp"
        android:layout_height="1dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="70dp"
        android:background="#00a88f"
        android:rotation="90"
        app:layout_constraintEnd_toStartOf="@+id/deleteimage"
        app:layout_constraintTop_toBottomOf="@+id/answerId" />

    <ImageView
        android:id="@+id/reportImage"
        android:layout_width="14dp"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="62dp"
        android:background="@drawable/warning"
        app:layout_constraintEnd_toStartOf="@+id/reportText"
        app:layout_constraintTop_toBottomOf="@+id/answerId" />

    <TextView
        android:id="@+id/reportText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="108dp"
        android:layout_marginTop="62dp"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="2.3sp"
        android:text="Report"
        android:textColor="#00a88f"
        android:textSize="11.7sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerId" />

    <View
        android:id="@+id/v1"
        android:layout_width="18dp"
        android:layout_height="1dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="70dp"
        android:background="#00a88f"
        android:rotation="90"
        app:layout_constraintEnd_toStartOf="@+id/reportImage"
        app:layout_constraintTop_toBottomOf="@+id/answerId" />

    <ImageView
        android:id="@+id/editimage"
        android:layout_width="14dp"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="62dp"
        android:background="@drawable/new_file_copy"
        app:layout_constraintEnd_toStartOf="@+id/edittext"
        app:layout_constraintTop_toBottomOf="@+id/answerId" />

    <TextView
        android:id="@+id/edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="200dp"
        android:layout_marginTop="62dp"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="2.3sp"
        android:text="Edit"
        android:textColor="#00a88f"
        android:textSize="11.7sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerId" />

    <View
        android:id="@+id/h1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="82dp"
        android:background="#00a88f"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerId" />

</android.support.constraint.ConstraintLayout>
