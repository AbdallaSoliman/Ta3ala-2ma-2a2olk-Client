<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="#f0fcff"
    tools:context="com.example.omnia.ta3ala_2ma_2a2olk_client.view.CompanyQuestionDetails">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#f0fcff"
        tools:context="com.example.omnia.ta3ala_2ma_2a2olk_client.view.CompanyQuestionDetails">

        <!--<Button-->
        <!--android:id="@+id/upRate"-->
        <!--android:layout_width="20dp"-->
        <!--android:layout_height="15dp"-->
        <!--android:layout_marginEnd="40dp"-->
        <!--android:layout_marginTop="36dp"-->
        <!--android:background="@drawable/uprate"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent" />-->

        <ImageView
            android:id="@+id/upRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="23dp"
            android:layout_marginTop="23dp"
            android:src="@drawable/arrow_up"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rateCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="35dp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="-5.3sp"
            android:text="3"
            android:textColor="#00a88f"
            android:textSize="13.3sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--<Button-->
        <!--android:id="@+id/downRate"-->
        <!--android:background="@drawable/downrate"-->
        <!--android:layout_width="20dp"-->
        <!--android:layout_height="15dp" />-->


        <ImageView
            android:id="@+id/downRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="23dp"
            android:layout_marginTop="55dp"
            android:src="@drawable/arrow_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/qTitle"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="2.3sp"
            android:text="لو سمحتم يا جماعة مين أفضل مدرس رياضة في طنطا ؟ علشان ألحق أحجز قبل السنة الجديدة ؟"
            android:textColor="#0055a5"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/h1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="72dp"
            android:background="#00a88f"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/qBody"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="75dp"
            android:background="#ffffff"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="6sp"
            android:paddingBottom="11dp"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:paddingTop="11dp"
            android:text=""
            android:textColor="#00a88f"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!--android:text="العديد من برامح النشر المكتبي وبرامح تحرير صفحات الويب تستخدم لوريم .. العديد من برامح النشر المكتبي وبرامح تحرير صفحات الويب تستخدم لوريم .. العديد من برامح النشر المكتبي وبرامح تحرير صفحات الويب تستخدم لوريم .. العديد من برامح النشر المكتبي وبرامح تحرير صفحات الويب تستخدم لوريم .. العديد من برامح النشر المكتبي وبرامح تحرير صفحات الويب تستخدم لوريم .. العديد من برامح النشر المكتبي وبرامح تحرير صفحات الويب تستخدم لوريم"-->

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/personImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_launcher_background"
            app:civ_border_color="#00a88f"
            app:civ_border_width="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qBody" />

        <TextView
            android:id="@+id/personeName"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"
            android:text="Hesham Muhammed"
            android:textColor="#00a88f"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qBody" />

        <TextView
            android:id="@+id/personeDate"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:text="2018/13/6"
            android:textColor="#00a88f"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/personeName" />

        <TextView
            android:id="@+id/personeRate"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:text="4.7 / 5.0"
            android:textColor="#00a88f"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/personeDate" />

        <View
            android:id="@+id/h2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="55dp"
            android:background="#00a88f"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qBody" />

        <ImageView
            android:id="@+id/deleteImage"
            android:layout_width="14dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/delete_button"
            app:layout_constraintEnd_toStartOf="@+id/deleteText"
            app:layout_constraintTop_toBottomOf="@+id/qBody" />

        <TextView
            android:id="@+id/deleteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="60dp"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="2.3sp"
            android:text="Delete"
            android:textColor="#00a88f"
            android:textSize="11.7sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qBody" />

        <View
            android:id="@+id/v2"
            android:layout_width="18dp"
            android:layout_height="1dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="67dp"
            android:background="#00a88f"
            android:rotation="90"
            app:layout_constraintEnd_toStartOf="@+id/deleteImage"
            app:layout_constraintTop_toBottomOf="@+id/qBody" />

        <ImageView
            android:id="@+id/reportImage"
            android:layout_width="14dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/warning"
            app:layout_constraintEnd_toStartOf="@+id/reportText"
            app:layout_constraintTop_toBottomOf="@+id/qBody" />

        <TextView
            android:id="@+id/reportText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="108dp"
            android:layout_marginTop="60dp"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="2.3sp"
            android:text="Report"
            android:textColor="#00a88f"
            android:textSize="11.7sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qBody" />


        <View
            android:id="@+id/v1"
            android:layout_width="18dp"
            android:layout_height="1dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="67dp"
            android:background="#00a88f"
            android:rotation="90"
            app:layout_constraintEnd_toStartOf="@+id/reportImage"
            app:layout_constraintTop_toBottomOf="@+id/qBody" />


        <ImageView
            android:id="@+id/editImage"
            android:layout_width="14dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/new_file_copy"
            app:layout_constraintEnd_toStartOf="@+id/editText"
            app:layout_constraintTop_toBottomOf="@+id/qBody" />

        <TextView
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="200dp"
            android:layout_marginTop="60dp"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="2.3sp"
            android:text="Edit"
            android:textColor="#00a88f"
            android:textSize="11.7sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qBody" />

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="82dp"
            android:background="#00a88f"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qBody" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view5" />

        <Button
            android:id="@+id/addAnswer"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundedbutton"
            android:onClick="addAnswer"
            android:text="Add Answer"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>