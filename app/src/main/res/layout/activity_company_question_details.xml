<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0fcff"
    android:orientation="vertical"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    tools:context="com.example.omnia.ta3ala_2ma_2a2olk_client.view.CompanyQuestionDetails">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/rateLayout"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/upRate"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:background="@drawable/uprate"/>
            <TextView
                android:id="@+id/rateCount"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/downRate"
                android:background="@drawable/downrate"
                android:layout_width="20dp"
                android:layout_height="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/qTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:textColor="#0055a5"
            android:textSize="20dp" />



    </LinearLayout>

    <View
        android:id="@+id/h1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="#00a88f" />

    <TextView
        android:id="@+id/qBody"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="#ffffff"
        android:textColor="#00a88f"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/personImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:civ_border_color="#00a88f"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/personeName"
            android:layout_width="100dp"
            android:layout_height="23dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="200dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:textColor="#00a88f"
            android:textSize="14dp" />

    </LinearLayout>

    <View
        android:id="@+id/h2"
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#00a88f" />

    <LinearLayout
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/reportImage"
            android:layout_width="23dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/report" />

        <TextView
            android:id="@+id/reportText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="Report"
            android:textColor="#00a88f"
            android:textSize="18dp" />


        <View
            android:id="@+id/v2"
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="#00a88f"
            android:rotation="90" />


        <ImageView
            android:id="@+id/editImage"
            android:layout_width="23dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_button" />

        <TextView
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="Edit"
            android:textColor="#00a88f"
            android:textSize="18dp" />


        <View
            android:id="@+id/v1"
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="#00a88f"
            android:rotation="90" />


        <ImageView
            android:id="@+id/deleteImage"
            android:layout_width="23dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/delete_button_copy" />

        <TextView
            android:id="@+id/deleteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Delete"
            android:textColor="#00a88f"
            android:textSize="18dp" />

    </LinearLayout>

    <View
        android:id="@+id/view5"
        android:layout_width="fill_parent"
        android:layout_height="1.5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="#00a88f" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp" />

    <Button
        android:onClick="addAnswer"
        android:id="@+id/addAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#0055a5"
        android:text="Add Answer"
        android:textColor="#ffffff"
        android:textSize="20dp"/>

</LinearLayout>
